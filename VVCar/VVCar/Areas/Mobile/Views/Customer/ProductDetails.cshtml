
@{
	ViewBag.Title = "";
	Layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";
}

<div id="productdetails" style="background-color:white;">
	<img class="details-img" src="~/Areas/resource/img/mobile/details-circle.png" v-on:click="shareimg" style="display:none" />
	<div class="top_box">
		<div class="top_box_text">{{Product.Name}}</div>
		<a v-on:click="back"><img src="~/Areas/resource/img/mobile/ture.png" class="top_box_img" style="position:absolute;top:17px;"></a>
		<a class="top_box2"></a>
		<a v-on:click="shoppingcart"><img src="~/Areas/resource/img/mobile/gwc2.png" style="width:5%;position:absolute;top:17px;right:10px;"></a>
	</div>
	<img class="sp_img" v-bind:src=Product.ImgUrl>
	<div class="sp_text">
		{{Product.Name}}
		<span style="float:right;border-radius:10px;background-color:#FF0C4B;width:60px;padding:3px;margin:3px;text-align:center;color:white;" v-bind:class="bargainClass" v-on:click="bargainorder(MerchantBargainOrderList)">砍价</span>
		<span style="float:right;border-radius:10px;background-color:#FF0C4B;width:60px;padding:3px;margin:3px;text-align:center;color:white;" v-bind:class="crowdClass" v-on:click="crowdorder(MerchantCrowdOrderList)">拼单</span>
	</div>

	<div style="display: table;">
	</div>

	<div class="sp_text2" style="border:none;">
		￥{{TotalMoney}}@*Product.PriceSale*@
		<div style="float:right;display:table;" v-if="ShowQuantity">
			<div style="display:table-cell;height:25px;" v-on:click="subtract" v-if="Quantity>0">
				<img class="addsubimg" style="display:table-cell;" src="~/Areas/resource/img/mobile/jian.png" />
			</div>
			<div class="quantity">{{Quantity}}</div>
			<div style="display:table-cell;height:25px;" v-on:click="add">
				<img class="addsubimg" src="~/Areas/resource/img/mobile/jia.png" />
			</div>
		</div>
	</div>
	<div class="kc_box"><span style="float:left;">原价：￥{{Product.BasePrice}}</span>库存：{{Product.Stock}}<span style="float:right; margin-bottom:10px;">月销：0</span></div>
	<div class="kc_box2">配送说明：<span style="font-size:14px; color:#666;">{{Product.DeliveryNotes}}</span></div>
	<div class="kc_box2">
		产品介绍：
		{{Product.Introduction}}
	</div>
	<a class="btn1" style="margin-top:20px;" v-on:click="paynow">立即购买</a>
	<a class="btn2" style="margin-bottom:20px;" v-on:click="addtoshoppingcart">加入购物车</a>
	<div class="graphicintroduction">
	</div>
</div>

@section scripts{
	<style type="text/css">
		.addsubimg {
			width: 25px;
			height: 25px;
		}

		.quantity {
			display: table-cell;
			min-width: 25px;
			color: black;
			height: 25px;
			line-height: 25px;
			font-size: 20px;
			text-align: center;
			vertical-align: middle;
		}

		.graphicintroduction {
			margin: 0 13px 20px 13px;
		}

		.show {
			display: table-cell;
		}

		.hide {
			display: none;
		}

		.details-img {
			width: 33px;
			position: fixed;
			top: 220px;
			right: 20px;
			z-index: 1;
			opacity: 0.5;
		}
	</style>
	<link type="text/css" href="~/Areas/resource/css/mobile/customer.css" />
	<link href="~/Areas/resource/css/mobile/customer.css" rel="stylesheet" type="text/css" />
	<script src="//cdn.bootcss.com/vue/2.1.10/vue.min.js"></script>
	<script type="text/javascript" src="//res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
	<script type="text/javascript">
		function wxConfig() {
			$.ajax({
				type: "POST",
				url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=VVCar&url=" + document.URL,
				datatype: "json",
				success: function (data) {
					if (data.IsSuccessful) {
						var temp = data.Data;
						wx.config({
							debug: false,
							appId: temp.appId,
							timestamp: temp.timestamp,
							nonceStr: temp.nonceStr,
							signature: temp.signature,
							jsApiList: [
								'checkJsApi',
								'onMenuShareTimeline',
								'onMenuShareAppMessage',
								'onMenuShareQQ',
								'onMenuShareWeibo',
								'hideOptionMenu',
								'hideAllNonBaseMenuItem',
								'showMenuItems',
								'closeWindow',
								'scanQRCode',
							]
						});
						wx.ready(function () {
							wx.hideAllNonBaseMenuItem();
						});
					} else {
					}
				},
				complete: function (xmlHttpRequest, textStatus) {
				},
				error: function (xmlHttpRequest, textStatus) {
				}
			});
		};
		wxConfig();
	</script>
	<script type="text/javascript">
         $(function () {
            var member = sessionStorage.getItem('member');
             if (member == null || member == '') {
                 var mch = $.getUrlParam('mch');
                 function init() {
                     $.ajax({
                         url: '/api/Member/GetMemberInfoByWeChat?openID=@ViewBag.OpenId',
                         type: 'GET',
                         headers: { 'CompanyCode': mch },
                         beforeSend: function () {
                             $.showLoading();
                         },
                         success: function (res) {
                             $.hideLoading();
                             if (res.IsSuccessful) {
                                 if (res.Data != null) {
                                     member = res.Data;
                                     sessionStorage.setItem('member', JSON.stringify(res.Data));
                                 } else {
                                     window.location.href = "/Mobile/Customer?mch=" + mch;
                                 }
                             } else {
                                 $.alert(res.ErrorMessage);
                                 window.location.href = "/Mobile/Customer?mch=" + mch;
                             }
                         },
                         error: function () {
                             $.hideLoading();
                             window.location.href = "/Mobile/Customer?mch=" + mch;
                         }
                     });
                 }
                 init();
             } else {
                 member = JSON.parse(member);
             }

			var mch = $.getUrlParam('mch');
			 var product = sessionStorage.getItem('product');

			if (product == null || product == '') {
				$.alert('未获取到产品信息');
			}
			 product = JSON.parse(product);

			 var isfromcod = sessionStorage.getItem('isfromcod') == 'true';

			$('.graphicintroduction').append(product.GraphicIntroduction);

			function addtoshoppingcart(data) {
				if (data == null) {
					$.alert('参数错误');
					return;
				}
				$.ajax({
					url: '/api/ShoppingCart/AddToShoppingCart',
					type: 'POST',
					data: data,
					headers: { 'CompanyCode': mch },
					beforeSend: function () {
						$.showLoading();
					},
					success: function (res) {
						$.hideLoading();
						if (res.IsSuccessful) {
							if (res.Data != null)
								$.toast('已添加');
							else
								$.alert('添加失败,请重试');
						} else {
							$.alert(res.ErrorMessage);
						}
					},
					error: function (res) {
						$.hideLoading();
					}
				});
			}
			 
			_viewModel = new Vue({
				el: '#productdetails',
				data: {
					Product: product,
					Quantity: 1,
					MerchantCrowdOrderList: [],
					MerchantBargainOrderList: [],
					TotalMoney: product.PriceSale,
					ShowQuantity: !isfromcod,
					MerchantCrowdOrderRecordID: '',
					MerchantBargainOrderRecordID: '',
					ShoppingCart: {
						MemberID: member.MemberID,
						OpenID: '@ViewBag.OpenId',
						Money: product.PriceSale,
						ShoppingCartItemList: [{
							GoodsID: product.ID,
							ProductName: product.Name,
							ProductType: 1,
							Quantity: 1,
							PriceSale: product.PriceSale,
							Money: product.PriceSale,
							Points: 0,
							ImgUrl: product.ImgUrl,
						}],
					},
				},
				computed: {
					crowdClass: function () {
						return {
							show: this.MerchantCrowdOrderList.length > 0,
							hide: this.MerchantCrowdOrderList.length <= 0,
						}
					},
					bargainClass: function () {
						return {
							show: this.MerchantBargainOrderList.length > 0,
							hide: this.MerchantBargainOrderList.length <= 0,
						}
					}
				},
				methods: {
					shareimg: function (event) {

					},
					back: function (event) {
						history.back(-1);
					},
					home: function (event) {
						window.location.href = "/Mobile/Customer/Home?mch=" + mch;
					},
					paynow: function (event) {
						product.Money = _viewModel.TotalMoney;
						product.Quantity = _viewModel.Quantity;
						sessionStorage.setItem('crowdid', _viewModel.MerchantCrowdOrderRecordID);
						sessionStorage.setItem('bargainid', _viewModel.MerchantBargainOrderRecordID);
						sessionStorage.setItem('productlist', JSON.stringify([product]));
						window.location.href = "/Mobile/Customer/ConfirmOrder?mch=" + mch;
					},
					crowdorder: function (data, event) {
						sessionStorage.setItem('merchantcrowdorders', JSON.stringify(data));
						window.location.href = '/Mobile/Customer/MerchantCrowdOrder?mch=' + mch + '&productid='+ product.ID;
					},
					bargainorder: function (data, event) {
						sessionStorage.setItem('merchantbargainorders', JSON.stringify(data));
						window.location.href = '/Mobile/Customer/MerchantBargainOrder?mch=' + mch + '&productid=' + product.ID;
					},
					shoppingcart: function (event) {
						window.location.href = "/Mobile/Customer/ShoppingCart?mch=" + mch;
					},
					add: function (event) {
						_viewModel.Quantity += 1;
						_viewModel.TotalMoney = _viewModel.Quantity * product.PriceSale;
						_viewModel.ShoppingCart.Money = _viewModel.Quantity * product.PriceSale;
						_viewModel.ShoppingCart.ShoppingCartItemList[0].Money = _viewModel.Quantity * product.PriceSale;
						_viewModel.ShoppingCart.ShoppingCartItemList[0].Quantity = _viewModel.Quantity;
					},
					subtract: function (event) {
						if (_viewModel.Quantity > 1) {
							_viewModel.Quantity -= 1;
							_viewModel.TotalMoney = _viewModel.Quantity * product.PriceSale;
							_viewModel.ShoppingCart.Money = _viewModel.Quantity * product.PriceSale;
							_viewModel.ShoppingCart.ShoppingCartItemList[0].Money = _viewModel.Quantity * product.PriceSale;
							_viewModel.ShoppingCart.ShoppingCartItemList[0].Quantity = _viewModel.Quantity;
						}
					},
					addtoshoppingcart: function (event) {
						addtoshoppingcart(_viewModel.ShoppingCart);
					}
				}
			 });

			 var crowdid = sessionStorage.getItem('crowdid');
			 if (crowdid != null && crowdid != '') {
				 _viewModel.MerchantCrowdOrderRecordID = crowdid;
			 }
			 var bargainid = sessionStorage.getItem('bargainid');
			 if (bargainid != null && bargainid != '') {
				 _viewModel.MerchantBargainOrderRecordID = bargainid;
			 }

			 function getmerchantcrowdorderlist() {
				 $.ajax({
					 url: '/api/MerchantCrowdOrder/GetMerchantCrowdOrderListByProductID',
					 type: 'GET',
					 data: { id: product.ID },
					 headers: { 'CompanyCode': mch },
					 beforeSend: function () {
						 $.showLoading();
					 },
					 success: function (res) {
						 $.hideLoading();
						 if (res.IsSuccessful) {
							 _viewModel.MerchantCrowdOrderList = res.Data;
						 } else {
							 $.alert(res.ErrorMessage);
						 }
					 },
					 error: function (res) {
						 $.hideLoading();
					 }
				 })
			 }
			 getmerchantcrowdorderlist();

			 function getmerchantbargainorderlist() {
				 $.ajax({
					 url: '/api/MerchantBargainOrder/GetMerchantBargainOrderListByProductID',
					 type: 'GET',
					 data: { id: product.ID },
					 headers: { 'CompanyCode': mch },
					 beforeSend: function () {
						 $.showLoading();
					 },
					 success: function (res) {
						 $.hideLoading();
						 if (res.IsSuccessful) {
							 _viewModel.MerchantBargainOrderList = res.Data;
						 } else {
							 $.alert(res.ErrorMessage);
						 }
					 },
					 error: function (res) {
						 $.hideLoading();
					 }
				 })
			 }
			 getmerchantbargainorderlist();
         });
	</script>
}

