
@{
    ViewBag.Title = "";
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";
}

<div class="main" id="loginreg">
    <img class="bgimg" src="~/Areas/resource/img/mobile/bg.jpg" />
    <div class="headerimgcon">
        <img class="headerimg" src="~/Areas/resource/img/mobile/logo.png" />
        <div class="nickname">@ViewBag.NickName</div>
    </div>
    <div class="logininfocon">
        <div class="zcdl_box3">
            <img src="~/Areas/resource/img/mobile/phone.png" style="width:16px; float:left; margin-top:19px;">
            <input v-model="UserInfo.MobilePhoneNo" type="number" placeholder="手机号码" name="address" size="11" maxlength="11" style="color:#fff" class="zcdl_box4" oninput="if(value.length>11)value=value.slice(0,11)">
            <a class="zcdl_text" v-on:click="sendSMS">发送验证码</a>
        </div>
        <div class="zcdl_box3" style="margin-top:inherit;">
            <img src="~/Areas/resource/img/mobile/yzm2.png" style="width:16px; float:left; margin-top:18px;">
            <input v-model="UserInfo.VerificationCode" type="text" placeholder="验证码" name="address" size="6" maxlength="6" style="color:#fff;width:85%;" class="zcdl_box4" oninput="if(value.length>6)value=value.slice(0,6)">
        </div>
        <div class="zcdl_box3" style="margin-top:inherit;">
            <img src="~/Areas/resource/img/mobile/gr.png" style="width:16px; float:left; margin-top:18px;">
            <input v-model="UserInfo.Name" type="text" placeholder="姓名" maxlength="50" style="color:#fff;width:85%;" class="zcdl_box4">
        </div>
        <div class="zcdl_box3" style="margin-top:inherit;">
            <img src="~/Areas/resource/img/mobile/departmentname.png" style="width:16px; float:left; margin-top:18px;">
            <input v-model="UserInfo.DepartmentName" type="text" placeholder="门店名称" maxlength="50" style="color:#fff;width:85%;" class="zcdl_box4">
        </div>
        <div class="zcdl_box3" style="margin-top:inherit;">
            <img src="~/Areas/resource/img/mobile/departmentaddress.png" style="width:16px; float:left; margin-top:18px;">
            <input v-model="UserInfo.DepartmentAddress" type="text" placeholder="门店地址" maxlength="100" style="color:#fff;width:85%;" class="zcdl_box4">
        </div>
        <a class="zcdl_btn" style="margin-top:30px;" v-on:click="register">注册</a>
    </div>
</div>

@section scripts{
    <style type="text/css">
        .main {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
        }

        .bgimg {
            width: 100%;
            height: 100%;
        }

        .indextable {
            display: table;
        }

        .indextablecell {
            display: table-cell;
        }

        .headerimgcon {
            width: 100%;
            text-align: center;
            top: 15px;
            position: absolute;
        }

        .headerimg {
            width: 80px;
            height: 80px;
        }

        .headerimgchange {
            border-radius: 80px;
        }

        .logininfocon {
            position: absolute;
            top: 100px;
            width: 100%;
        }

        .inputheaderimg {
            width: 23px;
            height: 23px;
        }

        .nickname {
            text-align: center;
            font-size: 15px;
            color: #fdc816;
        }

        .waitsendvc {
        }
    </style>
    <link type="text/css" href="~/Areas/resource/css/mobile/customer.css" />
    <link href="~/Areas/resource/css/mobile/customer.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.bootcss.com/vue/2.1.10/vue.min.js"></script>
    <script type="text/javascript" src="//res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script type="text/javascript">
        function wxConfig() {
            var mch = $.getUrlParam('mch');
            $.ajax({
                type: "POST",
                url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=" + mch + "&url=" + document.URL,
                datatype: "json",
                success: function (data) {
                    if (data.IsSuccessful) {
                        var temp = data.Data;
                        wx.config({
                            debug: false,
                            appId: temp.appId,
                            timestamp: temp.timestamp,
                            nonceStr: temp.nonceStr,
                            signature: temp.signature,
                            jsApiList: [
                                'checkJsApi',
                                'onMenuShareTimeline',
                                'onMenuShareAppMessage',
                                'onMenuShareQQ',
                                'onMenuShareWeibo',
                                'hideOptionMenu',
                                'hideAllNonBaseMenuItem',
                                'showMenuItems',
                                'closeWindow',
                                'scanQRCode',
                            ]
                        });
                        wx.ready(function () {
                            wx.hideAllNonBaseMenuItem();
                        });
                    } else {
                    }
                },
                complete: function (xmlHttpRequest, textStatus) {
                },
                error: function (xmlHttpRequest, textStatus) {
                }
            });
        };
        wxConfig();
    </script>
    <script type="text/javascript">
        $(function(){
            var mch = $.getUrlParam('mch');
            function init() {
                $.ajax({
                    url: '/api/Member/GetMemberInfoByWeChat?openID=@ViewBag.OpenId',
                    type: 'GET',
                    headers: { 'CompanyCode':mch },
                    beforeSend: function () {
                        $.showLoading();
                    },
                    success: function (res) {
                        $.hideLoading();
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                sessionStorage.setItem('member', JSON.stringify(res.Data));
                                window.location.href="/Mobile/Customer/Home?mch="+mch;
                            }
                        } else {
                            $.alert(res.ErrorMessage);
                        }
                    },
                    error: function () {
                        $.hideLoading();
                    }
                });
            }
            init();
        });
    </script>
    <script type="text/javascript">
        var mch = $.getUrlParam('mch');

        if ('@ViewBag.HeadImgUrl' != '' && '@ViewBag.HeadImgUrl' != null) {
            $('.headerimg').attr('src','@ViewBag.HeadImgUrl');
            $('.headerimg').addClass('headerimgchange');
        }

        function sendSMSAction(mobilephoneno) {
            if ($(".zcdl_text").hasClass('waitsendvc'))
                return;
            if (mobilephoneno == null || mobilephoneno == '') {
                $.alert('请先输入手机号码');
                return;
            }
            if (mobilephoneno.toString().length != 11) {
                $.alert('请输入11位手机号码');
                return;
            }
            $.ajax({
                url: '/AliyunSMS/Sms/SendSms?mobilePhoneNo=' + mobilephoneno + '&templateCode=SMS_119520024',
                type: 'GET',
                beforeSend: function () {
                    $.showLoading();
                },
                success: function (res) {
                    $.hideLoading();
                    if (res.IsSuccessful) {
                        $.toast('发送成功');
                        $(".zcdl_text").addClass('waitsendvc');
                        var j = 120;
                        var int = window.setInterval(function () {
                            if (j <= 0) {
                                $(".zcdl_text").removeClass('waitsendvc');
                                $(".zcdl_text").html("发送验证码");
                                stopInterval(int);
                            } else {
                                j--;
                                $(".zcdl_text").html(j + " S");
                            }
                        }, 1000);

                    }
                    else {
                        $.alert(res.ErrorMessage);
                    }
                },
                error: function () {
                    $.hideLoading();
                }
            });
        }

        function checkVerificationCode(mobilephoneno, verificationCode,callback) {
            if (mobilephoneno == null || mobilephoneno == '') {
                $.alert('请先输入手机号码');
                return;
            }
            if (mobilephoneno.toString().length!=11) {
                $.alert('请输入11位手机号码');
                return;
            }
            if (verificationCode == null || verificationCode == '') {
                $.alert('请先输入验证码');
                return;
            }
            //$.confirm('确认注册？', function () {
            $.ajax({
                url: '/AliyunSMS/Sms/CheckVerificationCode/' + mobilephoneno + '/' + verificationCode,
                type: 'GET',
                beforeSend: function () {
                    $.showLoading();
                },
                success: function (res) {
                    $.hideLoading();
                    if (res.IsSuccessful) {
                        if (res.Data) {
                            if (callback != null) {
                                callback(mobilephoneno.toString());
                            }
                        } else {
                            $.alert('验证码不正确');
                        }
                    }
                    else {
                        $.alert(res.ErrorMessage);
                    }
                },
                error: function () {
                    $.hideLoading();
                }
                });
            //});
        }

        _viewModel = new Vue({
            el: '#loginreg',
            data: {
                UserInfo: {
                    Name:'',
                    MobilePhoneNo: '',
                    VerificationCode: '',
                    PlateNumber: '',
                    DepartmentAddress: '',
                    DepartmentName:'',
                },
              },
            methods: {
                register: function (event) {
                    if (_viewModel.UserInfo.Name == null || _viewModel.UserInfo.Name == '') {
                        $.alert('请先填写姓名');
                        return;
                    }
                    if (_viewModel.UserInfo.DepartmentName == null || _viewModel.UserInfo.DepartmentName == '') {
                        $.alert('请先填写门店名称');
                        return;
                    }
                    if (_viewModel.UserInfo.DepartmentAddress == null || _viewModel.UserInfo.DepartmentAddress == '') {
                        $.alert('请先填写门店地址');
                        return;
                    }
                    checkVerificationCode(this.UserInfo.MobilePhoneNo, this.UserInfo.VerificationCode, function (mobilePhoneNo) {
                            $.ajax({
                            url: '/api/Member/Register',
                            type: 'POST',
                            headers: { "CompanyCode": mch },
                            data: {
                                WeChatOpenID: '@ViewBag.OpenId',
                                MobilePhoneNo: mobilePhoneNo,
                                Name: _viewModel.UserInfo.Name,
                                Password: '123456',
                                PlateNumber: _viewModel.UserInfo.PlateNumber,
                                DepartmentName: _viewModel.UserInfo.DepartmentName,
                                DepartmentAddress: _viewModel.UserInfo.DepartmentAddress,
                            },
                            beforeSend: function () {
                                //$.showLoading();
                            },
                            success: function (res) {
                                //$.hideLoading();
                                if (res.IsSuccessful) {
                                    $.toast('注册成功', function () {
                                        window.location.href = "/Mobile/Customer/Home?mch=" + mch;
                                    });
                                }
                                else {
                                    $.alert(res.ErrorMessage);
                                }
                            },
                            error: function (res) {
                                //$.hideLoading();
                                //$.alert('注册失败');
                                $.alert(JSON.stringify(res));
                            }
                        });
                    });
                },
                sendSMS: function (event) {
                    sendSMSAction(this.UserInfo.MobilePhoneNo);
                }
            }
        });
    </script>
}
