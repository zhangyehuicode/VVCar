@section scripts{
    <link type="text/css" href="~/Areas/resource/css/mobile/master.css" />
    <link href="~/Areas/resource/css/mobile/master.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.bootcss.com/vue/2.1.10/vue.min.js"></script>
    <script type="text/javascript" src="//res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script type="text/javascript">
        function wxConfig() {
            var mch = $.getUrlParam('mch');
            $.ajax({
                type: "POST",
                url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=" + mch + "&url=" + document.URL,
                datatype: "json",
                success: function (data) {
                    if (data.IsSuccessful) {
                        var temp = data.Data;
                        wx.config({
                            debug: false,
                            appId: temp.appId,
                            timestamp: temp.timestamp,
                            nonceStr: temp.nonceStr,
                            signature: temp.signature,
                            jsApiList: [
                                'checkJsApi',
                                'onMenuShareTimeline',
                                'onMenuShareAppMessage',
                                'onMenuShareQQ',
                                'onMenuShareWeibo',
                                'hideOptionMenu',
                                'hideAllNonBaseMenuItem',
                                'showMenuItems',
                                'closeWindow',
                                'scanQRCode',
                            ]
                        });
                        wx.ready(function () {
                            wx.hideAllNonBaseMenuItem();
                        });
                    } else {
                    }
                },
                complete: function (xmlHttpRequest, textStatus) {
                },
                error: function (xmlHttpRequest, textStatus) {
                }
            });
        };
        wxConfig();
    </script>
    <script type="text/javascript">
        $(function () {
            var mch = $.getUrlParam('mch');

            sessionStorage.setItem('ismaster', 'true');
            var mch = $.getUrlParam('mch');
            _viewModel = new Vue({
                el: '#masterhome',
                data: {
                    UserInfo: {},
                },
                methods: {
                    register: function (event) {
                        window.location.href = "/Mobile/Merchant/Home?mch=" + mch;
                    },
                    quickorder: function (event) {
                        window.location.href = "/Mobile/Merchant/QuickOrder?mch=" + mch;
                    },
                    order: function (event) {
                        window.location.href = "/Mobile/Merchant/Order?mch=" + mch;
                    },
                    myappointment: function (event) {
                        window.location.href = "/Mobile/Merchant/MyAppointment?mch=" + mch;
					},
					customerfinder: function (event) {
						window.location.href = "/Mobile/Merchant/Advisement?mch=" + mch;
					},
					analyseindex: function (event) {
						window.location.href = "/Mobile/Merchant/AnalyseIndex?mch=" + mch;
					},
                    scancodediscounts: function (event) {
                        window.location.href = "/Mobile/Merchant/ScanCodeDiscounts?mch=" + mch;
                    },
                    membershop: function (event) {
                        window.location.href = "/Mobile/Merchant/MemberShop?mch=" + mch;
                    },
                    myinfo: function (event) {
                        window.location.href = "/Mobile/Merchant/MyInfo?mch=" + mch;
                    },
                    staffmanager: function (event) {
                        window.location.href = "/Mobile/Merchant/StaffManager?mch=" + mch;
                    },
                    membermanager: function (event) {
                        window.location.href = "/Mobile/Merchant/MemberManager?mch=" + mch;
                    },
                    membercardmanager: function (event) {
                        window.location.href = "/Mobile/Merchant/MemberCardManager?mch=" + mch;
                    },
                    stockmanager: function (event) {
                        window.location.href = "/Mobile/Merchant/StockManager?mch=" + mch;
                    },
                    operatingstatement: function (event) {
                        window.location.href = "/Mobile/Merchant/OperatingStatement?mch=" + mch;
                    },
                    privilegeorder: function (event) {
                        window.location.href = "/Mobile/Merchant/PrivilegeOrder?mch=" + mch;
                    },
                    reimbursementcheck: function (event) {
                        window.location.href = "/Mobile/Agent/ReimbursementCheck?mch=" + mch;
                    },
                    logisticsmanagement: function (event) {
                        window.location.href = "/Mobile/Agent/LogisticsManagement?mch=" + mch;
					},
					superclassmanagement: function (event) {
						window.location.href = "/Mobile/Agent/SuperClassManagement?mch=" + mch;
                    },
                    deptlocation: function (event) {
                        window.location.href = "/Mobile/Merchant/DepartmentLocation?mch=" + mch;
                    }
                }
            });

              function getUserByOpenId() {
                $.ajax({
                    url: '/api/User/GetUserByOpenID',
                    type: 'GET',
                    headers: { 'CompanyCode': mch },
                    data: {
                        OpenID: '@ViewBag.OpenId',
                        IsManager: true,
                    },
                    success: function (res) {
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                sessionStorage.setItem('user', JSON.stringify(res.Data));
                                _viewModel.UserInfo = res.Data;
                            }
                            else {
                                window.location.href = "/Mobile/Merchant?mch=" + mch;
                            }
                        }
                        else {
                            $.alert(res.ErrorMessage);
                            window.location.href = "/Mobile/Merchant?mch=" + mch;
                        }
                    },
                    error: function () {
                        window.location.href = "/Mobile/Merchant?mch=" + mch;
                    }
                });
            }
            getUserByOpenId();
        });
    </script>
}