
@{
    ViewBag.Title = "";
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";
}

<div id="mycrowdorder" style="background-color:#f8f9fe;">
    <div class="top_box">
        <div class="top_box_text" style="background:#e02d28;">我的拼单</div>
        <a><img src="~/Areas/resource/img/mobile/ture.png" class="top_box_img" style="position:absolute;top:17px;" v-on:click="back"></a>
        <a class="top_box2"></a>
        <a><img src="~/Areas/resource/img/mobile/home.png" style="width:5%;position:absolute;top:17px;right:10px;" v-on:click="home"></a>
    </div>
    <div class="gwc_box" style="margin-top:15px;" v-for="Order in OrderList">
        <img class="gwc_img" v-bind:src=Order.ImgUrl>
        <div class="gwc_box2">
            <span class="gwc_text" style="margin-top:25px;">标题：{{Order.Name}}</span>
            <span class="gwc_text" style="margin-top:5px;">日期：{{Order.CreatedDate}}</span>
        </div>
        <div class="wddd_box2">
            <span style="margin-left:3%;">
                拼单价：<span style="color:#e02d28;">￥{{Order.Price}}</span><span class="crowdorder-pricesale">￥{{Order.PriceSale}}</span>
            </span>
            <a class="wddd_btn" style=" background:none; border:1px solid #e02d28; color:#e02d28; box-sizing:border-box;" v-on:click="orderdetails(Order)">详情</a>
        </div>
    </div>
</div>

@section scripts{
    <style type="text/css">
        .crowdorder-pricesale {
            font-size: 10px;
            color: #545456;
            text-decoration: line-through;
            margin-left: 15px;
        }
    </style>
    <link type="text/css" href="~/Areas/resource/css/mobile/customer.css" />
    <link href="~/Areas/resource/css/mobile/customer.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.bootcss.com/vue/2.1.10/vue.min.js"></script>
    <script type="text/javascript" src="//res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script type="text/javascript">
        function wxConfig() {
            var mch = $.getUrlParam('mch');
            $.ajax({
                type: "POST",
                url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=" + mch + "&url=" + document.URL,
                datatype: "json",
                success: function (data) {
                    if (data.IsSuccessful) {
                        var temp = data.Data;
                        wx.config({
                            debug: false,
                            appId: temp.appId,
                            timestamp: temp.timestamp,
                            nonceStr: temp.nonceStr,
                            signature: temp.signature,
                            jsApiList: [
                                'checkJsApi',
                                'onMenuShareTimeline',
                                'onMenuShareAppMessage',
                                'onMenuShareQQ',
                                'onMenuShareWeibo',
                                'hideOptionMenu',
                                'hideAllNonBaseMenuItem',
                                'showMenuItems',
                                'closeWindow',
                                'scanQRCode',
                            ]
                        });
                        wx.ready(function () {
                            wx.hideAllNonBaseMenuItem();
                        });
                    } else {
                    }
                },
                complete: function (xmlHttpRequest, textStatus) {
                },
                error: function (xmlHttpRequest, textStatus) {
                }
            });
        };
        wxConfig();
    </script>
    <script type="text/javascript">
         $(function () {
             var mch = $.getUrlParam('mch');
             _viewModel = new Vue({
                 el: '#mycrowdorder',
                 data: {
                     MyInfo: {},
                     OrderList: [],
                 },
                 methods: {
                     orderdetails: function (data, event) {
                         sessionStorage.setItem('crowdorder', JSON.stringify(data));
                         window.location.href = "/Mobile/CarBitCoin/MyCrowdOrderDetails?mch=" + mch;
                     },
                     home: function (event) {
                         window.location.href = "/Mobile/CarBitCoin/MyInfo?mch=" + mch;
                     },
                     back: function (event) {
                         history.back(-1);
                     },
                 }
             });

              function init() {
                $.ajax({
                    url: '/api/CarBitCoinMember/GetCarBitCoinMemberByOpenID?openId=@ViewBag.OpenId',
                    type: 'GET',
                    headers: { 'CompanyCode':mch },
                    beforeSend: function () {
                        $.showLoading();
                    },
                    success: function (res) {
                        $.hideLoading();
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                _viewModel.MyInfo = res.Data;
                                getmyorder();
                                sessionStorage.setItem('cbcmember', JSON.stringify(res.Data));
                            } else {
                                window.location.href = "/Mobile/CarBitcoin/Register?mch=" + mch;
                            }
                        } else {
                            $.alert(res.ErrorMessage);
                        }
                    },
                    error: function () {
                        $.hideLoading();
                    }
                });
             }
             var cbcmember = sessionStorage.getItem('cbcmember');
             if (cbcmember == null || cbcmember == '') {
                 init();
             } else {
                 cbcmember = JSON.parse(cbcmember);
                 _viewModel.MyInfo = cbcmember;
                 getmyorder();
             }

             function getmyorder() {
                 $.ajax({
                     url: '/api/CrowdOrderRecord?CarBitCoinMemberID=' + _viewModel.MyInfo.ID,
                     type: 'GET',
                     headers: { 'CompanyCode': mch },
                     beforeSend: function () {
                         $.showLoading();
                     },
                     success: function (res) {
                         $.hideLoading();
                         if (res.IsSuccessful) {
                             if (res.Data != null) {
                                 _viewModel.OrderList = res.Data;
                             }
                         } else {
                             $.alert(res.ErrorMessage);
                         }
                     },
                     error: function () {
                         $.hideLoading();
                     }
                 });
             }
        });
    </script>
}