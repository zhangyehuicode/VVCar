
@{
    ViewBag.Title = "";
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";
}

<div id="myorder" style="background-color:#f8f9fe;">
    <div class="top_box">
        <div class="top_box_text" style="background:#b23af4;">我的订单</div>
        <a><img src="~/Areas/resource/img/mobile/ture.png" class="top_box_img" style="position:absolute;top:17px;" v-on:click="back"></a>
        <a class="top_box2"></a>
        <a><img src="~/Areas/resource/img/mobile/home.png" style="width:5%;position:absolute;top:17px;right:10px;" v-on:click="home"></a>
    </div>
    <div class="gwc_box" style="margin-top:15px;" v-for="Order in OrderList">
        <img class="gwc_img" src="~/Areas/resource/img/mobile/defaultimg1.png">
        <div class="gwc_box2">
            <span class="gwc_text">订单号：{{Order.Code}}</span>
            <span class="gwc_text" style="margin-top:2px;">日期：{{Order.CreatedDate}}</span>
            <span class="gwc_text" style="margin-top:2px;" v-if="Order.Status==-1">付款不足</span>
            <span class="gwc_text" style="margin-top:2px;" v-if="Order.Status==0">未付款</span>
            <span class="gwc_text" style="margin-top:2px;" v-if="Order.Status==1">已付款未发货</span>
            <span class="gwc_text" style="margin-top:2px;" v-if="Order.Status==2">已发货</span>
            <span class="gwc_text" style="margin-top:2px;" v-if="Order.Status==3">已完成</span>
        </div>
        <div class="wddd_box2">
            <span style="margin-left:3%;">
                共计{{Order.Quantity}}件商品
                <span style="margin-left:3%;">
                    合计:<span style="color:#ff0c4b;">{{Order.Money}}</span>
                </span>
            </span>
            <a class="wddd_btn" style=" background:none; border:1px solid #efcb47; color:#efcb47; box-sizing:border-box;" v-on:click="orderdetails(Order)">详情</a>
        </div>
    </div>
    <img src="~/Areas/resource/img/mobile/daodile.png" class="shop_box6">
</div>

@section scripts{
    <style type="text/css">
    </style>
    <link type="text/css" href="~/Areas/resource/css/mobile/customer.css" />
    <link href="~/Areas/resource/css/mobile/customer.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.bootcss.com/vue/2.1.10/vue.min.js"></script>
    <script type="text/javascript" src="//res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script type="text/javascript">
        function wxConfig() {
            var mch = $.getUrlParam('mch');
            $.ajax({
                type: "POST",
                url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=" + mch + "&url=" + document.URL,
                datatype: "json",
                success: function (data) {
                    if (data.IsSuccessful) {
                        var temp = data.Data;
                        wx.config({
                            debug: false,
                            appId: temp.appId,
                            timestamp: temp.timestamp,
                            nonceStr: temp.nonceStr,
                            signature: temp.signature,
                            jsApiList: [
                                'checkJsApi',
                                'onMenuShareTimeline',
                                'onMenuShareAppMessage',
                                'onMenuShareQQ',
                                'onMenuShareWeibo',
                                'hideOptionMenu',
                                'hideAllNonBaseMenuItem',
                                'showMenuItems',
                                'closeWindow',
                                'scanQRCode',
                            ]
                        });
                        wx.ready(function () {
                            wx.hideAllNonBaseMenuItem();
                        });
                    } else {
                    }
                },
                complete: function (xmlHttpRequest, textStatus) {
                },
                error: function (xmlHttpRequest, textStatus) {
                }
            });
        };
        wxConfig();
    </script>
    <script type="text/javascript">
        $(function () {
           var mch = $.getUrlParam('mch');
           function init() {
                $.ajax({
                    url: '/api/CarBitCoinMember/GetCarBitCoinMemberByOpenID?openId=@ViewBag.OpenId',
                    type: 'GET',
                    headers: { 'CompanyCode':mch },
                    beforeSend: function () {
                        $.showLoading();
                    },
                    success: function (res) {
                        $.hideLoading();
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                sessionStorage.setItem('cbcmember', JSON.stringify(res.Data));
                            } else {
                                window.location.href = "/Mobile/CarBitcoin/Register?mch=" + mch;
                            }
                        } else {
                            $.alert(res.ErrorMessage);
                        }
                    },
                    error: function () {
                        $.hideLoading();
                    }
                });
             }
             var cbcmember = sessionStorage.getItem('cbcmember');
             if (cbcmember == null || cbcmember == '') {
                 init();
             }
        });
    </script>
    <script type="text/javascript">
        var mch = $.getUrlParam('mch');
        _viewModel = new Vue({
            el: '#myorder',
            data: {
                OrderList: [],
            },
            methods: {
                shop: function (event) {
                    window.location.href = "/Mobile/CarBitCoin/Shop?mch=" + mch;
                },
                productdetails: function (data, event) {
                    sessionStorage.setItem('product', JSON.stringify(data));
                    window.location.href = "/Mobile/CarBitCoin/ProductDetails?mch=" + mch;
                },
                orderdetails: function (data, event) {
                    sessionStorage.setItem('cbcorder', JSON.stringify(data));
                    window.location.href = "/Mobile/CarBitCoin/OrderDetails?mch=" + mch;
                },
                home: function (event) {
                    window.location.href = "/Mobile/CarBitCoin/MyInfo?mch=" + mch;
                },
                back: function (event) {
                    history.back(-1);
                },
            }
        });

        function getmyorder() {
            $.ajax({
                url: '/api/CarBitCoinOrder?OpenID=@ViewBag.OpenId',
                type: 'GET',
                headers: { 'CompanyCode': mch },
                beforeSend: function () {
                    $.showLoading();
                },
                success: function (res) {
                    $.hideLoading();
                    if (res.IsSuccessful) {
                        if (res.Data != null) {
                            for (var i = 0; i < res.Data.length; i++) {
                                var quantity = 0;
                                if (res.Data[i].CarBitCoinOrderItemList != null) {
                                    for (var j = 0; j < res.Data[i].CarBitCoinOrderItemList.length; j++) {
                                        quantity += res.Data[i].CarBitCoinOrderItemList[j].Quantity;
                                    }
                                }
                                res.Data[i].Quantity = quantity;
                            }
                            _viewModel.OrderList = res.Data;
                        }
                    } else {
                        $.alert(res.ErrorMessage);
                    }
                },
                error: function () {
                    $.hideLoading();
                }
            });
        }
        getmyorder();

    </script>
}
