    <script src="//cdn.bootcss.com/vue/2.1.10/vue.min.js"></script>
    <script type="text/javascript" src="//res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script type="text/javascript">
        function wxConfig() {
            var mch = $.getUrlParam('mch');
            $.ajax({
                type: "POST",
                url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=" + mch + "&url=" + document.URL,
                datatype: "json",
                success: function (data) {
                    if (data.IsSuccessful) {
                        var temp = data.Data;
                        wx.config({
                            debug: false,
                            appId: temp.appId,
                            timestamp: temp.timestamp,
                            nonceStr: temp.nonceStr,
                            signature: temp.signature,
                            jsApiList: [
                                'checkJsApi',
                                'onMenuShareTimeline',
                                'onMenuShareAppMessage',
                                'onMenuShareQQ',
                                'onMenuShareWeibo',
                                'hideOptionMenu',
                                'hideAllNonBaseMenuItem',
                                'showMenuItems',
                                'closeWindow',
                                'scanQRCode',
                            ]
                        });
                        wx.ready(function () {
                            wx.hideAllNonBaseMenuItem();
                        });
                    } else {
                    }
                },
                complete: function (xmlHttpRequest, textStatus) {
                },
                error: function (xmlHttpRequest, textStatus) {
                }
            });
        };
        wxConfig();
    </script>
    <script type="text/javascript">
    $(function () {
        var mch = $.getUrlParam('mch');

        _viewModel = new Vue({
            el: '#myproperty',
            data: {
                Member: { CarBitCoin: 0, FrozenCoin: 0,},
                CarBitCoinRecordList: [],
            },
            methods: {
                back: function (event) {
                    history.back(-1);
                },
            }
        });

        function init() {
            $.ajax({
                url: '/api/CarBitCoinMember/GetCarBitCoinMemberByOpenID?openId=@ViewBag.OpenId',
                type: 'GET',
                headers: { 'CompanyCode': mch },
                beforeSend: function () {
                    $.showLoading();
                },
                success: function (res) {
                    $.hideLoading();
                    if (res.IsSuccessful) {
                        if (res.Data != null) {
                            sessionStorage.setItem('cbcmember', JSON.stringify(res.Data));
                            _viewModel.Member = res.Data;
                            getCarBitCoinRecord();
                        } else {
                            window.location.href = "/Mobile/CarBitcoin/Register?mch=" + mch;
                        }
                    } else {
                        $.alert(res.ErrorMessage);
                    }
                },
                error: function () {
                    $.hideLoading();
                }
            });
        }
        //var cbcmember = sessionStorage.getItem('cbcmember');
        //if (cbcmember == null || cbcmember == '') {
            init();
        //} else {
        //    cbcmember = JSON.parse(cbcmember);
        //    _viewModel.Member = cbcmember;
        //    getCarBitCoinRecord();
        //}

        function getCarBitCoinRecord() {
            $.ajax({
                url: '/api/CarBitCoinMember/SearchCarBitCoinRecord?CarBitCoinMemberID=' + _viewModel.Member.ID,
                type: 'GET',
                headers: { 'CompanyCode': mch },
                beforeSend: function () {
                    $.showLoading();
                },
                success: function (res) {
                    $.hideLoading();
                    if (res.IsSuccessful) {
                        if (res.Data != null) {
                            _viewModel.CarBitCoinRecordList = res.Data;
                        }
                    } else {
                        $.alert(res.ErrorMessage);
                    }
                },
                error: function () {
                    $.hideLoading();
                }
            });
        }
    });
    </script>
}
