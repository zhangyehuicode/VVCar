    <script type="text/javascript">
        function wxConfig() {
            var mch = $.getUrlParam('mch');
            $.ajax({
                type: "POST",
                url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=" + mch + "&url=" + document.URL,
                datatype: "json",
                success: function (data) {
                    if (data.IsSuccessful) {
                        var temp = data.Data;
                        wx.config({
                            debug: false,
                            appId: temp.appId,
                            timestamp: temp.timestamp,
                            nonceStr: temp.nonceStr,
                            signature: temp.signature,
                            jsApiList: [
                                'checkJsApi',
                                'onMenuShareTimeline',
                                'onMenuShareAppMessage',
                                'onMenuShareQQ',
                                'onMenuShareWeibo',
                                'hideOptionMenu',
                                'hideAllNonBaseMenuItem',
                                'showMenuItems',
                                'closeWindow',
                                'scanQRCode',
                            ]
                        });
                        wx.ready(function () {
                            wx.hideAllNonBaseMenuItem();
                        });
                    } else {
                    }
                },
                complete: function (xmlHttpRequest, textStatus) {
                },
                error: function (xmlHttpRequest, textStatus) {
                }
            });
        };
        wxConfig();
    </script>
    <script type="text/javascript">
        $(function () {
        var mch = $.getUrlParam('mch');
        var user = sessionStorage.getItem('user');
        var isgeneralmanager = sessionStorage.getItem('isgeneralmanager') == 'true';
        var issalesmanger = sessionStorage.getItem('isgeneralmanager') == 'false';
        _viewModel = new Vue({
            el: '#ordermanagement',
            data: {
                User: {},
                OrderList: [],
                OrderCount: 0,
                AgentDepartmentList: [],
                Order: {
                    AgentDepartmentID:'',
                    LinkMan: '',
                    Phone:'',
                    Address: '',
                    Status: 0,
                    Source:1,
                    Remark:'',
                    UserID: '',
                    OrderItemList: [],
                },
                CurrentOrder: {},
                ProductCategoryList: [],
                ProductList: [],
                CurrentProduct: {},
                CurrentProductList:[],
            },
            methods: {
                back: function (event) {
                    history.back(-1);
                },
                home: function (event) {
                    if (isgeneralmanager || issalesmanger)
                        window.location.href = "/Mobile/Agent/GeneralManagerHome?mch=" + mch;
                    else
                        window.location.href = "/Mobile/Merchant/MasterHome?mch=" + mch;
                },
                search: function (event) {
                    search();
                },
                orderitems: function (data, event) {
                    _viewModel.CurrentOrder = data;
                    $('.orderitemsmain').show();
                },
                closeorderitems: function (data, event) {
                    $('.orderitemsmain').hide();
                },
                showaddorder: function (event) {
                    _viewModel.CurrentProductList = [];
                    _viewModel.Order = {
                        AgentDepartmentID: '',
                        LinkMan: '',
                        Phone: '',
                        Address: '',
                        Status: 0,
                        Source: 1,
                        Remark: '',
                        UserID: '',
                        OrderItemList: [],
                    };
                    $('#oncredit')[0].checked = false;
                    $('#agentdepartmentselect').val(-1);
                    $('.addordermain').show();
                },
                addorder: function (data, event) {
                    if (data == null || data == '') {
                        $.alert('参数错误');
                        return;
                    }
                    if (_viewModel.Order == null || _viewModel.Order == '') {
                        $.alert('参数错误');
                        return;
                    }
                    _viewModel.Order.AgentDepartmentID = $('#agentdepartmentselect').val();
                    $.confirm('确认添加？', function () {
                        addorder();
                    });
                },
                calllinkman: function (data, event) {
                    window.location.href ="tel://"+ data.Phone;
                },
                closeaddorder: function (data, event) {
                    $('.addordermain').hide();
                },
                addproduct: function (event) {
                    var addflag = true;
                    for (var i = 0; i < _viewModel.CurrentProductList.length; i++) {
                        if (_viewModel.CurrentProductList[i].ID == _viewModel.CurrentProduct.ID) {
                            addflag = false;
                        }
                    }
                    if (addflag) {
                        var currentProduct=$.extend(true, {}, _viewModel.CurrentProduct);
                            currentProduct.Quantity = 1;
                        _viewModel.CurrentProductList.push(currentProduct);
                    }
                },
                removeproduct: function (data, event) {
                    if (data == null)
                        return;
                    var index = -1;
                    for (var i = 0; i < _viewModel.CurrentProductList.length; i++) {
                        if (_viewModel.CurrentProductList[i].ID == data.ID) {
                            index = i;
                            break;
                        }
                    }
                    if (index != -1)
                        _viewModel.CurrentProductList.splice(index, 1);
                },
                confirmorder: function (event) {
                    if (_viewModel.Order.AgentDepartmentID == null || _viewModel.Order.AgentDepartmentID == '') {
                        $.alert('请先选择客户');
                        return;
                    }
                    if (_viewModel.Order.LinkMan == null || _viewModel.Order.LinkMan == '') {
                        $.alert('请先填写联系人');
                        return;
                    }
                    if (_viewModel.Order.Phone == null || _viewModel.Order.Phone == '') {
                        $.alert('请先填写联系电话');
                        return;
                    }
                    if (_viewModel.Order.Address == null || _viewModel.Order.Address == '') {
                        $.alert('请先填写收货地址');
                        return;
                    }
                    if (_viewModel.CurrentProductList == null || _viewModel.CurrentProductList.length < 1) {
                        $.alert('请先选择产品');
                        return;
                    }
                    _viewModel.Order.OrderItemList = [];
                    for (var i = 0; i < _viewModel.CurrentProductList.length; i++) {
                        var product= _viewModel.CurrentProductList[i];
                        var orderitem = {
                            GoodsID: product.ID,
                            ImgUrl: product.ImgUrl,
                            ProductName: product.Name,
                            ProductType: 1,
                            Quantity: product.Quantity,
                            PriceSale: product.PriceSale,
                            //Money:0,
                        }
                        _viewModel.Order.OrderItemList.push(orderitem);
                    }
                    if ($('#oncredit')[0].checked) {
                        _viewModel.Order.Status = -2;
                    } else {
                        _viewModel.Order.Status = 0;
                    }
                    _viewModel.Order.UserID = _viewModel.User.ID;
                    //$.alert(JSON.stringify(_viewModel.Order));
                    $.confirm('确认提交？', function () {
                        addorder();
                    });
                }
            }
        });

            var userdata = {
                OpenID: '@ViewBag.OpenId',
                IsManager: false,
            };
            if (isgeneralmanager || issalesmanger) {
                userdata = {
                    OpenID: '@ViewBag.OpenId',
                    IsGeneralManager: isgeneralmanager,
                    IsSalesManger: !isgeneralmanager,
                };
            }

            function getUserByOpenId() {
                $.ajax({
                    url: '/api/User/GetUserByOpenID',
                    type: 'GET',
                    headers: { 'CompanyCode': mch },
                    data: userdata,
                    success: function (res) {
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                _viewModel.User = res.Data;
                                _viewModel.Order.UserID = res.Data.ID;
                                sessionStorage.setItem('user', JSON.stringify(res.Data));
                            }
                            else {
                                _viewModel.home();
                            }
                        }
                        else {
                            $.alert(res.ErrorMessage);
                            _viewModel.home();
                        }
                    },
                    error: function () {
                        _viewModel.home();
                    }
                });
            }
            if (user == null || user == '') {
                getUserByOpenId();
            } else {
                var user = JSON.parse(user);
                _viewModel.User = user;
                _viewModel.Order.UserID = user.ID;
            }

            function search() {
                var ordercode = $('#ordercode').val();
                $.ajax({
                    url: '/api/Order?TNoLMPAddEN=' + ordercode,
                    type: 'GET',
                    headers: { 'CompanyCode': mch },
                    beforeSend: function () {
                        $.showLoading();
                    },
                    success: function (res) {
                        $.hideLoading();
                        if (res.IsSuccessful) {
                            _viewModel.OrderList = res.Data;
                            _viewModel.OrderCount = res.Data.length;
                        } else {
                            $.alert(res.ErrorMessage);
                        }
                    },
                    error: function () {
                        $.hideLoading();
                    }
                });
            }
            search();

            function getAgentDepartment() {
                $.ajax({
                    url: '/api/AgentDepartment',
                    type: 'GET',
                    headers: { 'CompanyCode': mch },
                    success: function (res) {
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                _viewModel.AgentDepartmentList = res.Data;
                            }
                        } else {
                            $.alert(res.ErrorMessage);
                        }
                    },
                    error: function () {
                    }
                });
            }
            getAgentDepartment();

            function addorder() {
                if (_viewModel.Order == null)
                    return;
                $.ajax({
                    url: '/api/Order',
                    type: 'POST',
                    data: _viewModel.Order,
                    headers: { 'CompanyCode': mch },
                    beforeSend: function () {
                        $.showLoading();
                    },
                    success: function (res) {
                        $.hideLoading();
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                $('.addordermain').hide();
                                $.toast('添加成功');
                                search();
                            }
                        } else {
                            $.alert(res.ErrorMessage);
                        }
                    },
                    error: function () {
                        $.hideLoading();
                    }
                });
            }

            function getProductCategory() {
                $.ajax({
                    url: '/api/ProductCategory?IsFromStockManager=true',
                    type: 'GET',
                    headers: { 'CompanyCode': mch },
                    beforeSend: function () {
                        $.showLoading();
                    },
                    success: function (res) {
                        $.hideLoading();
                        if (res.IsSuccessful) {
                            _viewModel.ProductCategoryList = res.Data;
                            if (res.Data != null && res.Data.length > 0) {
                                _viewModel.ProductList = res.Data[0].SubProducts;
                                if (_viewModel.ProductList != null && _viewModel.ProductList.length > 0) {
                                    _viewModel.CurrentProduct = _viewModel.ProductList[0];
                                }
                            }
                        } else {
                            $.alert(res.ErrorMessage);
                        }
                    },
                    error: function () {
                        $.hideLoading();
                    }
                });
            }
            getProductCategory();

            $('#productcategoryselect').change(function () {
                var value = $(this).val();
                for (var i = 0; i < _viewModel.ProductCategoryList.length; i++) {
                    if (_viewModel.ProductCategoryList[i].ID == value) {
                        _viewModel.ProductList = _viewModel.ProductCategoryList[i].SubProducts;
                        if (_viewModel.ProductList != null && _viewModel.ProductList.length > 0) {
                            _viewModel.CurrentProduct = _viewModel.ProductList[0];
                        }
                        break;
                    }
                }
            });

            $('#productselect').change(function () {
                var value = $(this).val();
                for (var i = 0; i < _viewModel.ProductList.length; i++) {
                    if (_viewModel.ProductList[i].ID == value) {
                        _viewModel.CurrentProduct = _viewModel.ProductList[i];
                        break;
                    }
                }
            });

            $('#agentdepartmentselect').change(function () {
                var value = $(this).val();
                if (value == null || value == '')
