
@{
    ViewBag.Title = "";
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";
}

<div id="ordermanagement">
    <div class="toubu">
        <a v-on:click="back"><img src="~/Areas/resource/img/mobile/master/fhj.png" style="width:10px; float:left; margin-left:3%; margin-top:18px;"></a>
        订单管理
        <a v-on:click="home"><img src="~/Areas/resource/img/mobile/master/czt.png" style="width:20px; float:right; margin-right:3%; margin-top:18px;"></a>
    </div>
    <div class="touxiang">
        <div style="width:100%;float:left; ">
            <img src="@ViewBag.HeadImgUrl" class="touxiang_img">
            <div class="touxiang_div">
                <span>{{User.Name}}</span>
                <span style=" font-size:14px; color:#999;">订单：{{OrderCount}}条</span>
            </div>
        </div>
        <div class="kcd_btn" style="position:absolute;top:80px;right:20px;" v-on:click="showaddorder">添加订单</div>
    </div>
    <div class="kcd_box2">
        <form>
            <input type="text" class="kcgl_input" style="color:#999;width:200px;" placeholder="订单号/手机号码/收件人" id="ordercode">
        </form>
        <div class="kcgl_btn"><img src="~/Areas/resource/img/mobile/master/ss2.png" style="width:20px; padding-top:10px;" v-on:click="search"></div>
    </div>
    <div class="touxiang" v-for="Order in OrderList">
        <div class="kcgl_box">
            <div class="kcgl">订单号</div>
            <div class="kcgl2">
                <span>{{Order.Code}}</span>
            </div>
        </div>
        <div class="kcgl_box">
            <div class="kcgl">订单状态</div>
            <div class="kcgl2">
                <span style="color:#ff0c4c;" v-if="Order.Status==-2">挂账</span>
                <span style="color:#ff0c4c;" v-if="Order.Status==-1">付款不足</span>
                <span style="color:#ff0c4c;" v-if="Order.Status==0">未付款</span>
                <span style="color:#51b3f0;" v-if="Order.Status==1">已付款未发货</span>
                <span style="color:#51b3f0;" v-if="Order.Status==2">已发货</span>
                <span style="color:#51b3f0;" v-if="Order.Status==3">已完成</span>
            </div>
        </div>
        <div class="kcgl_box">
            <div class="kcgl">快递单号</div>
            <div class="kcgl2">
                <span>{{Order.ExpressNumber}}</span>
            </div>
        </div>
        <div class="kcgl_box">
            <div class="kcgl">收件人</div>
            <div class="kcgl2">
                <span>{{Order.LinkMan}}</span>
            </div>
        </div>
        <div class="kcgl_box">
            <div class="kcgl">联系电话</div>
            <div class="kcgl2">
                <span>{{Order.Phone}}</span>
                <span>
                    <a style="background-color:#51b3f0;float:right; margin-right:10px; font-size:12px; width:35px;" v-on:click="calllinkman(Order)">呼叫</a>
                </span>
            </div>
        </div>
        <div class="kcgl_box">
            <div class="kcgl">收货地址</div>
            <div class="kcgl2">
                <span>{{Order.Address}}</span>
            </div>
        </div>
        <div class="kcgl_box">
            <div class="kcgl">业务员</div>
            <div class="kcgl2">
                <span>{{Order.UserName}}</span>
            </div>
        </div>
        <div class="kcgl_box">
            <div class="kcgl">订单详情</div>
            <div class="kcgl2">
                <span>
                    <a style="background-color:#51b3f0;float:left; margin-left:10%; font-size:12px; width:70px;" v-on:click="orderitems(Order)">订单详情</a>
                </span>
            </div>
        </div>
        @*<div class="kcgl_box" style="border:none;">
                <div class="kcgl">操作</div>
                <div class="kcgl2">
                    <span>
                        <a style="background-color:#51b3f0;float:left;width:70px;margin:10px 3px;" v-on:click="calllinkman(Order)">联系收件人</a>
                    </span>
                </div>
            </div>*@
    </div>
    <div class="kcgl_box2"></div>
    <div class="addordermain">
        <div class="deliverycon">
            <div class="popcon">
                <img class="closeimg" src="~/Areas/resource/img/mobile/close.png" v-on:click="closeaddorder" />
                <div class="kcgl" style="width:100%;border:none;line-height:30px;">添加订单</div>
                <div class="quickoatable">
                    <div class="quickoatablecell itemtitle" style="vertical-align:middle;">客户</div>
                    <div class="quickoatablecell">
                        <select class="kcd_input" style="width:100px;margin:0;" id="agentdepartmentselect">
                            <option value="-1">选择客户</option>
                            <option v-for="AgentDepartment in AgentDepartmentList" v-bind:value="JSON.stringify(AgentDepartment)">{{AgentDepartment.Name}}</option>
                        </select>
                    </div>
                </div>
                <div class="quickoatable">
                    <div class="quickoatablecell itemtitle">联系人</div>
                    <input class="quickoatablecell inputbottom" placeholder="联系人" v-model:value="Order.LinkMan" />
                </div>
                <div class="quickoatable">
                    <div class="quickoatablecell itemtitle">联系电话</div>
                    <input class="quickoatablecell inputbottom" placeholder="联系电话" v-model:value="Order.Phone" />
                </div>
                <div class="quickoatable">
                    <div class="quickoatablecell itemtitle">收货地址</div>
                    <textarea class="quickoatablecell inputbottom" placeholder="收货地址" v-model:value="Order.Address"></textarea>
                </div>
                <div class="quickoatable">
                    <div class="quickoatablecell itemtitle" style="vertical-align:middle;">挂单</div>
                    <input class="quickoatablecell" type="checkbox" style="-webkit-appearance:checkbox;" id="oncredit" />
                </div>
                <div class="quickoatable">
                    <div class="quickoatablecell itemtitle">备注</div>
                    <textarea class="quickoatablecell inputbottom" placeholder="备注" v-model:value="Order.Remark"></textarea>
                </div>
                <div style="font-size:13px;color:#2d2d30;margin:5px 0;">产品选择</div>
                <div class="kcd_box2" style="margin:0;width:100%;float:none;">
                    <select class="kcd_input" id="productcategoryselect">
                        <option v-for="ProductCategory in ProductCategoryList" v-bind:value="ProductCategory.ID">{{ProductCategory.Name}}</option>
                    </select>
                    <select class="kcd_input" id="productselect">
                        <option v-for="Product in ProductList" v-bind:value="Product.ID">{{Product.Name}}</option>
                    </select>
                    <div class="kcd_btn" v-on:click="addproduct">增加</div>
                </div>
                @*<div class="quickoatable" style="padding-top:50px;" v-for="Product in CurrentProductList">
                        <div class="quickoatablecell">
                            <img class="selectproductimg" v-bind:src=Product.ImgUrl />
                        </div>
                        <div class="quickoatablecell">{{Product.Name}}</div>
                        <input type="number" class="quickoatablecell" min="0" v-model:value="Product.Quantity" />
                        <div class="quickoatablecell" v-bind:click="removeproduct(Product)">移除</div>
                    </div>*@
                <div class="selectproductcon" v-for="Product in CurrentProductList">
                    <img class="closeimg" style="position:relative;float:right;margin-bottom:-20px;" src="~/Areas/resource/img/mobile/close.png" v-on:click="removeproduct(Product)" />
                    <div class="ordermanagementtable">
                        <div class="ordermanagementtablecell selectproducttitle">名称</div>
                        <div class="ordermanagementtablecell" style="color:#51b3f0;">{{Product.Name}}</div>
                    </div>
                    <div class="ordermanagementtable">
                        <div class="ordermanagementtablecell selectproducttitle">编码</div>
                        <div class="ordermanagementtablecell">{{Product.Code}}</div>
                    </div>
                    <div class="ordermanagementtable">
                        <div class="ordermanagementtablecell selectproducttitle">销售单价</div>
                        <div class="ordermanagementtablecell">{{Product.PriceSale}}</div>
                    </div>
                    <div class="ordermanagementtable">
                        <div class="ordermanagementtablecell selectproducttitle" style="vertical-align:middle;">图片</div>
                        <div class="ordermanagementtablecell">
                            <img class="productdetailsimg" v-bind:src=Product.ImgUrl />
                        </div>
                    </div>
                    <div class="ordermanagementtable">
                        <div class="ordermanagementtablecell selectproducttitle">数量</div>
                        <div class="ordermanagementtablecell">
                            <input type="number" style="border:1px solid #ccc;width:80px;height:30px;text-align:center;" min="1" v-model:value="Product.Quantity" />
                        </div>
                    </div>
                    @*<div class="ordermanagementtable">
                            <div class="ordermanagementtablecell selectproducttitle">操作</div>
                            <div class="ordermanagementtablecell">
                                <div class="removeproduct" v-on:click="removeproduct(Product)">删除</div>
                            </div>
                        </div>*@
                </div>
                <div class="confirmdelivery" v-on:click="confirmorder">提交</div>
            </div>
        </div>
    </div>
    <div class="orderitemsmain">
        <div class="deliverycon">
            <div style="width:100%;text-align:center;padding:20px 0 10px 0;">订单详情</div>
            <img class="closeimg" src="~/Areas/resource/img/mobile/close.png" v-on:click="closeorderitems" />
            <div class="kcgl_box" style="height:80px;" v-for="OrderItem in CurrentOrder.OrderItemList" v-if="OrderItem.ProductType==1">
                <div class="kcgl" style="width:30%;height:100%;">
                    <img class="productdetailsimg" v-bind:src=OrderItem.ImgUrl />
                </div>
                <div class="kcgl" style="width:45%;height:80px;line-height:80px;">{{OrderItem.ProductName}}</div>
                <div class="kcgl" style="width:25%;height:80px;line-height:80px;">{{OrderItem.Quantity}}</div>
            </div>
        </div>
    </div>
</div>

