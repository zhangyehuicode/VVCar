
@{
    ViewBag.Title = "";
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";
}

<div id="agentdepartmentdetails">
    <div class="toubu">
        <a v-on:click="back"><img src="~/Areas/resource/img/mobile/master/fhj.png" style="width:10px; float:left; margin-left:3%; margin-top:18px;"></a>
        <div class="title">商户详情</div>
        <a v-on:click="home" class="homeposition"><img src="~/Areas/resource/img/mobile/master/czt.png" style="width:20px; float:right; margin-right:3%; margin-top:18px;"></a>
    </div>
    <div class="hykhx">
        <div><span class="smewm">商户名称：{{AgentDepartment.Name}}</span></div>
        @*<div><span class="smewm">状态：<span style="color:#ff0000" v-if="AgentDepartment.Status==0">未收款</span><span style="color:#ff0000" v-if="AgentDepartment.Status==2">收款不足</span>&nbsp;&nbsp;<span style="color:#51b3f0" v-if="AgentDepartment.Status==1">已收款</span><a style="color:#fff;background:#51b3f0;" v-on:click="selectpaytype(AgentDepartment)" v-if="AgentDepartment.Status!=1">收款</a></span></div>*@
        <div><span class="smewm">法人（负责人）：{{AgentDepartment.LegalPerson}}</span></div>
        <div><span class="smewm">联系电话：{{AgentDepartment.MobilePhoneNo}}</span></div>
        <div><span class="smewm">身份证编号：{{AgentDepartment.IDNumber}}</span></div>
        <div><span class="smewm">公司地址：{{AgentDepartment.CompanyAddress}}</span></div>
        <div><span class="smewm">开户行：{{AgentDepartment.Bank}}</span></div>
        <div><span class="smewm">银行账号：{{AgentDepartment.BankCard}}</span></div>
        <div><span class="smewm">创建日期：{{AgentDepartment.CreatedDate}}</span></div>
        <div><span class="smewm" style="margin-bottom:15px;">审核状态：<span style="color:#ff0000" v-if="AgentDepartment.ApproveStatus==0">未审核</span><span style="color:#ff0000" v-if="AgentDepartment.ApproveStatus==1">已审核</span>&nbsp;&nbsp;<span style="color:#51b3f0" v-if="AgentDepartment.Status==2">已导入</span></span></div>
        <div class="imgcon">
            <div class="imgtitlecon">营业执照：</div>
            <img class="agentdeptimg" v-bind:src=AgentDepartment.BusinessLicenseImgUrl v-on:click="businessLicenseImgUrl(AgentDepartment)" />
        </div>
        <div class="imgcon">
            <div class="imgtitlecon">身份证正面：</div>
            <img class="agentdeptimg" v-bind:src=AgentDepartment.LegalPersonIDCardFrontImgUrl v-on:click="legalPersonIDCardFrontImgUrl(AgentDepartment)" />
        </div>
        <div class="imgcon">
            <div class="imgtitlecon">身份证反面：</div>
            <img class="agentdeptimg" v-bind:src=AgentDepartment.LegalPersonIDCardBehindImgUrl v-on:click="legalPersonIDCardBehindImgUrl(AgentDepartment)" />
        </div>
    </div>
</div>

@section scripts{
    <style type="text/css">
        .imgcon {
            margin: 10px 13px;
        }

        .imgtitlecon {
            margin: 10px 0;
        }

        .agentdeptimg {
            width: 100%;
            height: 190px;
        }
    </style>
    <link type="text/css" href="~/Areas/resource/css/mobile/master.css" />
    <link href="~/Areas/resource/css/mobile/master.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.bootcss.com/vue/2.1.10/vue.min.js"></script>
    <script type="text/javascript" src="//res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script type="text/javascript">
        function wxConfig() {
            var mch = $.getUrlParam('mch');
            $.ajax({
                type: "POST",
                url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=" + mch + "&url=" + document.URL,
                datatype: "json",
                success: function (data) {
                    if (data.IsSuccessful) {
                        var temp = data.Data;
                        wx.config({
                            debug: false,
                            appId: temp.appId,
                            timestamp: temp.timestamp,
                            nonceStr: temp.nonceStr,
                            signature: temp.signature,
                            jsApiList: [
                                'checkJsApi',
                                'onMenuShareTimeline',
                                'onMenuShareAppMessage',
                                'onMenuShareQQ',
                                'onMenuShareWeibo',
                                'hideOptionMenu',
                                'hideAllNonBaseMenuItem',
                                'showMenuItems',
                                'closeWindow',
                                'scanQRCode',
                            ]
                        });
                        wx.ready(function () {
                            wx.hideAllNonBaseMenuItem();
                        });
                    } else {
                    }
                },
                complete: function (xmlHttpRequest, textStatus) {
                },
                error: function (xmlHttpRequest, textStatus) {
                }
            });
        };
        wxConfig();
    </script>
    <script type="text/javascript">
        $(function () {
        var user = sessionStorage.getItem('user');

            var agentuser = sessionStorage.getItem('agentuser');
            if (agentuser != null && agentuser != '')
                user = agentuser;
            var isgeneralmanager = sessionStorage.getItem('isgeneralmanager') == 'true';

        var mch = $.getUrlParam('mch');
        _viewModel = new Vue({
            el: '#agentdepartmentdetails',
            data: {
                AgentDepartment: {},
            },
            methods: {
                back: function (event) {
                    history.back(-1);
                },
                home: function (event) {
                    window.location.href = "/Mobile/Agent/GeneralManagerHome?mch=" + mch;
                },
                selectpaytype: function (event) {
                    //window.location.href = "/Mobile/Merchant/PayType?mch=" + mch;
                },
                businessLicenseImgUrl: function (data, event) {
                    window.location.href = data.BusinessLicenseImgUrl;
                },
                legalPersonIDCardFrontImgUrl: function (data, event) {
                    window.location.href = data.LegalPersonIDCardFrontImgUrl;
                },
                legalPersonIDCardBehindImgUrl: function (data, event) {
                    window.location.href = data.LegalPersonIDCardBehindImgUrl;
                },
            }
            });

            function getAgentDepartment(id) {
                if (id == null || id == '')
                    return;
                $.ajax({
                    url: '/api/AgentDepartment?AgentDepartmentID=' + id,
                    type: 'GET',
                    headers: { 'CompanyCode': mch },
                    beforeSend: function () {
                        $.showLoading();
                    },
                    success: function (res) {
                        $.hideLoading();
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                if (res.Data.length > 0) {
                                    _viewModel.AgentDepartment = res.Data[0];
                                    sessionStorage.setItem('agentdepartment', JSON.stringify(res.Data[0]));
                                }
                            }
                        } else {
                            $.alert(res.ErrorMessage);
                        }
                    },
                    error: function () {
                        $.hideLoading();
                    }
                });
            }

            var agentdepartment = sessionStorage.getItem('agentdepartment');
            if (agentdepartment != null && agentdepartment != '') {
                agentdepartment = JSON.parse(agentdepartment);
                getAgentDepartment(agentdepartment.ID);
            }

            function getUserByOpenId() {
                $.ajax({
                    url: '/api/User/GetUserByOpenID',
                    type: 'GET',
                    headers: { 'CompanyCode': mch },
                    data: {
                        OpenID: '@ViewBag.OpenId',
                        IsGeneralManager: isgeneralmanager,
                        IsSalesManger: !isgeneralmanager,
                    },
                    success: function (res) {
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                sessionStorage.setItem('user', JSON.stringify(res.Data));
                            }
                            else {
                                _viewModel.home();
                            }
                        }
                        else {
                            $.alert(res.ErrorMessage);
                            _viewModel.home();
                        }
                    },
                    error: function () {
                        _viewModel.home();
                    }
                });
            }
            if (user == null || user=='') {
                getUserByOpenId();
            }
        });
    </script>
}