@section scripts{
    <link type="text/css" href="~/Areas/resource/css/mobile/master.css" />
    <link href="~/Areas/resource/css/mobile/master.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.bootcss.com/vue/2.1.10/vue.min.js"></script>
    <script type="text/javascript" src="//res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script type="text/javascript">
        function wxConfig() {
            var mch = $.getUrlParam('mch');
            $.ajax({
                type: "POST",
                url: "http://www.cheyinz.cn/wxis/api/WeChat/JsApiSignature?companyCode=" + mch + "&url=" + document.URL,
                datatype: "json",
                success: function (data) {
                    if (data.IsSuccessful) {
                        var temp = data.Data;
                        wx.config({
                            debug: false,
                            appId: temp.appId,
                            timestamp: temp.timestamp,
                            nonceStr: temp.nonceStr,
                            signature: temp.signature,
                            jsApiList: [
                                'checkJsApi',
                                'onMenuShareTimeline',
                                'onMenuShareAppMessage',
                                'onMenuShareQQ',
                                'onMenuShareWeibo',
                                'hideOptionMenu',
                                'hideAllNonBaseMenuItem',
                                'showMenuItems',
                                'closeWindow',
                                'scanQRCode',
                            ]
                        });
                        wx.ready(function () {
                            wx.hideAllNonBaseMenuItem();
                        });
                    } else {
                    }
                },
                complete: function (xmlHttpRequest, textStatus) {
                },
                error: function (xmlHttpRequest, textStatus) {
                }
            });
        };
        wxConfig();
    </script>
    <script type="text/javascript">
        $(function () {
            var mch = $.getUrlParam('mch');
            //sessionStorage.setItem('isgeneralmanager', 'true');
            _viewModel = new Vue({
                el: '#generalmanagerhome',
                data: {
                    UserInfo: {},
                    IsGeneralManager: false,
                    IsSalesManger: false,
                    IsLogistics: false,
                    ShowGeneralManagerTitle: false,
                    ShowSalesMangerTitle: false,
                    ShowLogisticsTitle: false,
                },
                methods: {
                    quickopenaccount: function (event) {
                        window.location.href = "/Mobile/Agent/QuickOpenAccount?mch=" + mch;
                    },
                    agentdepartment: function (event) {
                        window.location.href = "/Mobile/Agent/TodayOpenAccount?mch=" + mch;
                    },
                    myinfo: function (event) {
                        window.location.href = "/Mobile/Agent/MyInfo?mch=" + mch;
                    },
                    staffmanager: function (event) {
                        window.location.href = "/Mobile/Merchant/StaffManager?mch=" + mch;
                    },
                    membermanager: function (event) {
                        //window.location.href = "/Mobile/Agent/MemberManager?mch=" + mch;
                    },
                    stockmanager: function (event) {
                        window.location.href = "/Mobile/Agent/StockManager?mch=" + mch;
                    },
                    salessatement: function (event) {
                        window.location.href = "/Mobile/Agent/SalesStatement?mch=" + mch;
                    },
                    reimbursement: function (event) {
                        window.location.href = "/Mobile/Agent/Reimbursement?mch=" + mch;
                    },
                    myreimbursement: function (event) {
                        window.location.href = "/Mobile/Agent/MyReimbursement?mch=" + mch;
                    },
                    mydepartment: function (event) {
                        window.location.href = "/Mobile/Agent/MyDepartment?mch=" + mch;
                    },
                    reimbursementcheck: function (event) {
                        window.location.href = "/Mobile/Agent/ReimbursementCheck?mch=" + mch;
                    },
                    potentialclients: function (event) {
                        window.location.href = "/Mobile/Agent/PotentialClients?mch=" + mch;
                    },
                    logisticsmanagement: function (event) {
                        window.location.href = "/Mobile/Agent/LogisticsManagement?mch=" + mch;
                    },
                    ordermanagement: function () {
                        window.location.href = "/Mobile/Agent/OrderManagement?mch=" + mch;
					},
					superclassmanagement: function (event) {
						window.location.href = "/Mobile/Agent/SuperClassManagement?mch=" + mch;
					},
					customerfinder: function (event) {
						window.location.href = "/Mobile/Merchant/Advisement?mch=" + mch;
                    },
                    productstatistic: function (event) {
                        window.location.href = "/Mobile/Agent/ProductRetailStatistic?mch=" + mch;
                    }
                }
            });

              function getUserByOpenId() {
                $.ajax({
                    url: '/api/User/GetUserByOpenID',
                    type: 'GET',
                    headers: { 'CompanyCode': mch },
                    data: {
                        OpenID: '@ViewBag.OpenId',
                        IsGeneralManager: true,
                    },
                    success: function (res) {
                        if (res.IsSuccessful) {
                            if (res.Data != null) {
                                sessionStorage.setItem('user', JSON.stringify(res.Data));
                                _viewModel.UserInfo = res.Data;
                                _viewModel.IsGeneralManager = res.Data.IsGeneralManager;
                                _viewModel.IsSalesManger = res.Data.IsSalesManger;
                                _viewModel.IsLogistics = res.Data.IsLogistics;
                                if (res.Data.IsGeneralManager) {
                                    sessionStorage.setItem('isgeneralmanager', 'true');
                                    _viewModel.ShowGeneralManagerTitle = true;
                                }
                                else if (res.Data.IsSalesManger) {
                                    sessionStorage.setItem('isgeneralmanager', 'false');
                                    _viewModel.ShowSalesMangerTitle = true;
                                }
                                else {
                                    sessionStorage.setItem('isgeneralmanager', 'false');
                                    _viewModel.ShowLogisticsTitle = true;
                                }
                            }
                            else {
                                window.location.href = "/Mobile/Agent?mch=" + mch;
                            }
                        }
                        else {
                            $.alert(res.ErrorMessage);
                            window.location.href = "/Mobile/Agent?mch=" + mch;
                        }
                    },
                    error: function () {
                        window.location.href = "/Mobile/Agent?mch=" + mch;
                    }
                });
            }
            getUserByOpenId();
        });
    </script>
